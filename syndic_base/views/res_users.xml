<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="user_syndic_base" model="ir.ui.view">
	        <field name="name">Syndic Management user</field>
	        <field name="model">res.users</field>
	        <field name="inherit_id" ref="base.view_users_form"/>
	        <field name="arch" type="xml">
               <xpath expr="//page" position="after">
					<page string="Information Syndic">
						<group>
							<field name="server_mail_id"/>
							<field name="immeuble_id"/>
						</group>
					</page>
               </xpath>
	        </field>
    	</record>
	</data>
</odoo>
