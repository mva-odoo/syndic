<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <!--tree view -->
        <record model="ir.ui.view" id="syndic_facturation_tree">
            <field name="name">Syndic facturation tree</field>
            <field name="model">syndic.facturation</field>
            <field name="arch" type="xml">
                <tree string="Facture">
                    <field name="name"/>
                    <field name="immeuble_id"/>
                    <field name="date" />
                </tree>
            </field>
        </record>

        <!--form view -->
        <record model="ir.ui.view" id="syndic_facturation_form">
            <field name="name">Syndic facturation form</field>
            <field name="model">syndic.facturation</field>
            <field name="arch" type="xml">
                <form string="Facture">
                    <group>
                        <field name="name"/>
                        <field name="immeuble_id"/>
                        <field name="date" />
                        <field name="date_fr" />
                    </group>

                    <field name="line_ids">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="type_id"/>
                            <field name="prix"/>
                            <field name="nombre"/>
                            <field name="qty_id"/>
                            <field name="prix_tot"/>
                        </tree>
                    </field>
                    <group>
                        <field name="total"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_facturation_syndic">
            <field name="name">facturation syndic</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_type_facturation_syndic">
            <field name="name">type de facture</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Facturation"
                  id="syndic_facturation_main" />

        <menuitem name="Factures"
                  id="syndic_facture_main"
                  parent="syndic_facturation_main"
                  sequence="10"/>

        <menuitem name="Factures"
                  id="syndic_facture"
                  parent="syndic_facture_main"
                  action="action_facturation_syndic"
                  sequence="10"/>

        <menuitem name="Types de facture"
                  id="syndic_type_facture"
                  parent="syndic_facture_main"
                  action="action_type_facturation_syndic"
                  sequence="20"/>
    </data>

</openerp>
