<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
        <record model="ir.ui.view" id="syndic_facturation_search">
            <field name="name">Syndic facturation search</field>
            <field name="model">syndic.facturation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="immeuble_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_tree">
            <field name="name">Syndic facturation tree</field>
            <field name="model">syndic.facturation</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Facture">
                    <field name="name"/>
                    <field name="immeuble_id"/>
                    <field name="date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_honoraire_tree">
            <field name="name">Syndic facturation honoraire tree</field>
            <field name="model">syndic.facturation</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Facture">
                    <field name="name"/>
                    <field name="immeuble_id"/>
                    <field name="date" />
                    <field name="trimestre" />
                    <field name="year" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_form">
            <field name="name">Syndic facturation form</field>
            <field name="model">syndic.facturation</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Facture">
                    <field name="facture_type" invisible="1"/>
                    <group>
                        <field name="name"/>
                        <field name="immeuble_id"/>
                        <field name="date" />
                        <field name="date_fr" />
                    </group>

                    <field name="line_ids">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="type_id" required="1"/>
                            <field name="prix"/>
                            <field name="nombre"/>
                            <field name="qty_id"/>
                            <field name="prix_tot"/>
                        </tree>
                    </field>
                    <group>
                        <field name="total"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_honoraire_form">
            <field name="name">Syndic facturation  Honoraire form</field>
            <field name="model">syndic.facturation</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Facture">
                    <group>
                        <field name="name"/>
                        <field name="facture_type" invisible="1"/>
                        <field name="facture_type2"
                               options="{'no_create': True, 'no_edit': True}"
                               required="1"
                        />
                        <field name="immeuble_id"/>
                        <field name="date" />
                        <field name="date_fr" />
                        <field name="trimestre" required="1"/>
                        <field name="year" required="1"/>
                    </group>

                    <field name="line_ids">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="prix"/>
                            <field name="nombre"/>
                            <field name="qty_id"/>
                            <field name="prix_tot"/>
                        </tree>
                    </field>
                    <group>
                        <field name="total"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_facturation_syndic">
            <field name="name">facture suivi syndic</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('facture_type', '=', 'suivi_syndic')]</field>
            <field name="context">{'default_facture_type': 'suivi_syndic'}</field>
        </record>

        <record model="ir.actions.act_window" id="action_facturation_honoraire">
            <field name="name">facture suivi honoraire</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('facture_type', 'in', ['honoraire', 'fraisadmin'])]</field>
            <field name="context">{'default_facture_type': 'honoraire'}</field>
        </record>

        <record id="action_view_tree_proprietaire" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_facturation_honoraire"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="syndic_facturation_honoraire_tree"/>
        </record>

        <record id="action_view_form_proprietaire" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_facturation_honoraire"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="syndic_facturation_honoraire_form"/>
        </record>

        <record model="ir.actions.act_window" id="action_type_facturation_syndic">
            <field name="name">type de facture</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Facturation"
                  id="syndic_facturation_main" />

        <menuitem name="Factures"
                  id="syndic_facture_main"
                  parent="syndic_facturation_main"
                  sequence="10"/>

        <menuitem name="Factures Suivi Syndic"
              id="syndic_facture"
              parent="syndic_facture_main"
              action="action_facturation_syndic"
              sequence="10"/>

        <menuitem name="Honoraires et frais admin."
              id="syndic_facture_honoraire"
              parent="syndic_facture_main"
              action="action_facturation_honoraire"
              sequence="20"/>

        <menuitem name="Types de facture"
                  id="syndic_type_facture"
                  parent="syndic_facture_main"
                  action="action_type_facturation_syndic"
                  sequence="80"/>
    </data>

</odoo>
