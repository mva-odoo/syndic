<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="syndic_facturation.facture">
            <t t-call="report.html_container">
                <t t-set="docs" t-value="docs.with_context({'lang':'fr_BE'})" />
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6"></div>
                                    <div class="col-xs-6" style="font-size:16px;">
                                        <span t-field="o.immeuble_id.name"/> C/o SG IMMO<br/>
                                        <span t-field="res_company.street"/><br/>
                                        <span t-field="res_company.zip"/> <span t-field="res_company.city"/><br/>
                                        <span t-field="res_company.country_id.name"/><br/>
                                        <br/>
                                        Bruxelles, le <span t-field="o.date_fr"/><br/>
                                    </div>
                                </div>
                                <div class="col-xs-12" style="font-size:18px;">
                                        <div class="col-xs-2">
                                            <br/>Concerne:<br/><br/><br/>
                                            BCE:<br/>
                                            Objet:<br/><br/><br/>
                                        </div>
                                        <div class="col-xs-10">
                                            <br/><span t-field="o.immeuble_id.name"/><br/>
                                            <span t-field="o.immeuble_id.address_building"/><br/>
                                            <span t-esc="o.immeuble_id.zip_building"/> <span t-field="o.immeuble_id.city_building.name"/><br/>
                                            <span t-field="o.immeuble_id.BCE"/><br/>
                                            <span>Etats des frais et honoraires pour prestations accomplies</span><br/>
                                        </div>

                                     <div class="col-xs-12">
                                         <table class="table table-condensed" style="font-size:16px;">
                                              <thead>
                                                <tr style ="text-align:center">
                                                    <th>Date</th>
                                                    <th>Motif</th>
                                                    <th>Quantité</th>
                                                    <th>Prix unitaire</th>
                                                    <th>Prix total</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sale_tbody">
                                            <t t-foreach="o.line_ids" t-as="line">
                                                <tr>
                                                    <td><span t-field="line.name"/></td>
                                                    <td><span t-field="line.type_id.name"/></td>
                                                    <td><span t-field="line.nombre"/> <span t-field="line.qty_id.name"/></td>
                                                    <td><span t-field="line.prix"/>€</td>
                                                    <td><span t-field="line.prix_tot"/>€</td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>Total: <span t-field="o.total"/>€</td>
                                            </tr>
                                             </tbody>
                                         </table>
                                    </div>
                                 </div>
                            </div>
                        </div>
                </t>
            </t>
        </template>
        <report
                id="facture_print"
                model="syndic.facturation"
                string="Facture"
                name="syndic_facturation.facture"
                file="name"
                report_type="qweb-pdf"
                />
    </data>
</openerp>