<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.module.category" id="base.module_category_syndic_facturation">
            <field name="name">Syndic Facturation</field>
        </record>

        <record id="syndic_facturation" model="res.groups">
            <field name="category_id" ref="base.module_category_syndic_facturation"/>
            <field name="name">Syndic/Facturation</field>
        </record>

        <record id="syndic_facturation_manager" model="res.groups">
            <field name="name">Syndic/Facturation Manager</field>
            <field name="category_id" ref="base.module_category_syndic_facturation"/>
            <field name="implied_ids" eval="[(6,0,[ref('syndic_facturation')])]"/>
        </record>

        <record id="ir_rule_facturation_all" model="ir.rule">
            <field name="name">voir que c est facture all</field>
            <field name="model_id" ref="model_syndic_facturation"/>
            <field name="groups" eval="[(4, ref('syndic_facturation'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [('create_uid', '=', user.id)]
            </field>
        </record>

        <record id="ir_rule_facturation" model="ir.rule">
            <field name="name">voir que c est facture</field>
            <field name="model_id" ref="model_syndic_facturation"/>
            <field name="groups" eval="[(4, ref('syndic_facturation_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [(1, '=', 1)]
            </field>
        </record>
    </data>
</openerp>
