<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.module.category" id="base.module_category_syndic_facturation">
            <field name="name">Syndic Facturation</field>
        </record>

        <record id="syndic_facturation_group" model="res.groups">
            <field name="category_id" ref="base.module_category_syndic_facturation"/>
            <field name="name">Syndic/Facturation User</field>
        </record>

        <record id="syndic_facturation_manager_group" model="res.groups">
            <field name="name">Syndic/Facturation Manager</field>
            <field name="category_id" ref="base.module_category_syndic_facturation"/>
            <field name="implied_ids" eval="[(6,0,[ref('syndic_facturation_group')])]"/>
        </record>

        <record id="ir_rule_facturation_all" model="ir.rule">
            <field name="name">Syndic facturation user facturation</field>
            <field name="model_id" ref="model_syndic_facturation"/>
            <field name="groups" eval="[(4, ref('syndic_facturation_group'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [('create_uid', '=', user.id)]
            </field>
        </record>

        <record id="ir_rule_facturation" model="ir.rule">
            <field name="name">Syndic facturation manager facturation</field>
            <field name="model_id" ref="model_syndic_facturation"/>
            <field name="groups" eval="[(4, ref('syndic_facturation_manager_group'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [(1, '=', 1)]
            </field>
        </record>
    </data>
</openerp>
