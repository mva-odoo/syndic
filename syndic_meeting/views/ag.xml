<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="syndic_ag_view_tree" model="ir.ui.view">
        <field name="name">syndic.ag.view.tree</field>
        <field name="model">syndic.ag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="building_id"/>
                <field name="date"/>
                <field name="type_ag"/>
            </tree>
        </field>
    </record>

    <record id="syndic_ag_view_form" model="ir.ui.view">
        <field name="name">syndic.ag.view.form</field>
        <field name="model">syndic.ag</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box">
                    <button 
                        name="go_survey"
                        string="Ordre du jour"
                        type="object"
                        icon="fa-user-circle"
                    />
                </div>
                <h1>
                    <field name="building_id" placeholder="Immeuble" class="oe_inline" options="{'no_create': True}"/>
                </h1>
                <group>
                    <group string="Date/lieu de l'AG">
                        <field name="date"/>
                        <field name="where"/>
                    </group>
                    <group string="Information AG">
                        <field name="type_ag"/>
                        <field name="send_ag"/>
                    </group>
                </group>
                <notebook>
                    <page name="presence" string="Liste de Presences">
                        <group>
                            <group>
                                <field name="presence_percentage" widget="progressbar"/>
                            </group>
                            <group>
                                <field name="presence_quotities"/>
                            </group>
                        </group>
                        <field name="presence_ids">
                            <tree editable="top" delete="0" create="0">
                                <field name="owner_id" force_save="1"/>
                                <field name="lot_ids" widget="many2many_tags" force_save="1"/>
                                <field name="presence"/>
                                <field name="presence_with" attrs="{'readonly': [('presence', '!=', 'represente')], 'required': [('presence', '=', 'represente')]}"/>
                                <field name="quotities" sum="QuotitÃ©es"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="syndic_ag_action" model="ir.actions.act_window">
        <field name="name">AG</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">syndic.ag</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <menuitem id="syndic_ag_menu_act" name="AG" parent="syndic_base.syndic_main" action="syndic_ag_action" sequence=""/>
</odoo>
