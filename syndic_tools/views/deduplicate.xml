<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record model="ir.ui.view" id="form_tools_deduplicate">
            <field name="name">dedupliqué form view</field>
            <field name="model">syndic.tools.deduplicate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Chercher" type="object" name="search_occurance"/>
                        <button string="Deduplquer" type="object" name="deduplicate"/>
                    </header>
                    <group>
                        <field name="model_id" />
                        <field name="name_research" />
                        <field name="id_master"/>
                        <field name="duplicate_ids">
                            <tree>
                                <field name="name"/>
                                <field name="rec_id"/>
                            </tree>
                        </field>
                        <field name="deduplicate_ids">
                            <tree editable="top">
                                <field name="champs"/>
                                <field name="model_id"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_tools_deduplicate">
			<field name="name">Dedupliquer</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">syndic.tools.deduplicate</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem name="Dédupliquer"
                  id="tools_deduplicate_menu"
                  parent="syndic_management.configuration_syndic"
                  action="action_tools_deduplicate"/>
    </data>
</openerp>