<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="syndic_pcmn_search">
            <field name="name">Syndic pcmn search</field>
            <field name="model">syndic.pcmn</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id" invisible="1"/>
                    <group expand="0" string="Group By...">
                        <filter string="Parent" domain="[]" name="group_facture" context="{'group_by':'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_pcmn_tree">
            <field name="name">Syndic pcmn tree</field>
            <field name="model">syndic.pcmn</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_pcmn_form">
            <field name="name">Syndic pcmn form</field>
            <field name="model">syndic.pcmn</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="parent_id"/>
                        <field name="main_compte"/>
                        <field name="type_account"/>
                    </group>
                    <field name="child_ids"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_product_form">
            <field name="name">Syndic product form</field>
            <field name="model">syndic.product</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="receive_compte_id"/>
                        <field name="payable_compte_id"/>
                        <field name="account_product"/>
                        <field name="is_amortissable"/>
                        <field name="etablissement_fond" attrs="{'invisible': [('account_product', '=', False)]}"/>
                        <field name="accompte_fond_id" attrs="{'invisible': [('account_product', '=', False)]}"/>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="detail"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_syndic_plan_compte_compta">
            <field name="name">Syndic plan comptable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.pcmn</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Plan de compte" id="syndic_plan_compte_compta_detail"
                  parent="syndic_configuration_compta" action="action_syndic_plan_compte_compta"/>
    </data>
</openerp>