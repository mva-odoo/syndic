<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="syndic_facture_form">
            <field name="name">Syndic Facture Form</field>
            <field name="model">syndic.facture</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="validate_facture" type="object" string="Validé" states="draft"/>
                        <button name="reset_draft" type="object" string="Remettre en brouillon" states="validate"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="immeuble_id" attrs="{'readonly':[('state', '!=','draft')]}"/>
                        <field name="invoice_date" attrs="{'readonly':[('state', '!=','draft')]}"/>
                        <field name="exercice_id" domain="[('immeuble_id', '=', immeuble_id)]"/>
                    </group>
                    <notebook>
                        <page string="Ligne de facture">
                            <field name="facture_line_ids" attrs="{'readonly':[('state', '!=','draft')]}">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="invoice_line_date"/>
                                    <field name="fournisseur_id"/>
                                    <field name="product_id"/>
                                    <field name="repartition_lot_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Detail de la facture">
                            <field name="facture_detail_ids" readonly="1">
                                <tree>
                                    <field name="facture_line_id"/>
                                    <field name="amount"/>
                                    <field name="lot_id"/>
                                    <field name="product_id"/>
                                    <field name="proprietaire_ids" widget='many2many_tags'/>
                                    <field name="fournisseur_id"/>
                                    <field name='is_paid'/>
                                    <field name='is_amortissement'/>
                                    <button name='pay_all' string="Payé totalité" type="object"
                                            attrs="{'invisible':[('is_paid', '=', True)]}"/>
                                    <button name='amortissement_wizard' string="Amortir" type="object"
                                            attrs="{'invisible':['|',('is_amortissement', '=', True),
                                            ('is_paid', '!=', True)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="bilan_ids">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="account_id"/>
                            <field name="debit"/>
                            <field name="credit"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="syndic_repartition_lot_form">
            <field name="name">Syndic repartition lot Form</field>
            <field name="model">syndic.repartition.lot</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="create_normal_repartition" string="Créer la repartition normale" type="object"/>
                    </header>
                    <group>
                        <field name="name"/>
                        <field name="repart_detail_ids"/>
                        <field name="immeuble_id"/>
                        <field name="percentage_lot" widget="progressbar"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_repartition_lot_detail_form">
            <field name="name">Syndic repartition lot detail Form</field>
            <field name="model">syndic.repartition.lot.detail</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="lot_id"/>
                        <field name="value"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_repartition_lot_detail_tree">
            <field name="name">Syndic repartition lot detail Tree</field>
            <field name="model">syndic.repartition.lot.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lot_id"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="syndic_facture_detail_graph">
            <field name="name">Syndic repartition lot detail graph</field>
            <field name="model">syndic.facture.detail</field>
            <field name="arch" type="xml">
                <graph string="Details comptabilité" type="bar">
                    <field name="fournisseur_id"/>
                    <field name="amount" operator="+"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facture_detail_form">
            <field name="name">Syndic repartition lot detail form</field>
            <field name="model">syndic.facture.detail</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="facture_id"/>
                        <field name="facture_line_id"/>
                        <field name="amount"/>
                        <field name="lot_id"/>
                        <field name="product_id"/>
                        <field name="proprietaire_ids"/>
                        <field name="fournisseur_id"/>
                        <field name="is_paid"/>
                        <field name="is_amortissement"/>
                        <field name="amortissement_ids"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_exercice_compta_form">
            <field name="name">Syndic exercice compta From</field>
            <field name="model">syndic.exercice</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Ouverture" type="object" name="open_exercice_wizard" states='draft'/>
                        <button string="Cloture" type="object" name="close_exercice_wizard" states='amortissement'/>
                        <button string="Amortissement" type="object" name="compute_amortissement" states='open'/>
                        <button string="Appel complementaire" type="object" name="open_exercice_wizard" states='open'/>
                        <button string="Imprimer le bilan" type="object" name="print_bilan"/>
                        <button string="Reset" type="object" name="reset"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="name"/>
                        <field name="immeuble_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <button string="Voir compte regroupé" type="object" name="open_group_exercice"/>
                    <button string="Voir compte resultat" type="object" name="compte_resultat"/>
                    <field name="ligne_ids"/>
                    <group>
                        <field name="amount_amortissement"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_amortissement_compta_wizard">
            <field name="name">Syndic amortissement compta wizard</field>
            <field name="model">syndic.amortissement.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id"/>
                        <field name="amount"/>
                        <field name="duration"/>
                        <field name="split_amount"/>
                        <field name="debit_account_id"/>
                        <field name="credit_account_id"/>
                    </group>
                    <footer>
                        <button string="Amortir" type="object" name="amortir"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_bilan_compta_form">
            <field name="name">Syndic bilan ligne From</field>
            <field name="model">syndic.bilan.ligne</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="total"/>
                        <field name="account_id"/>
                        <field name="facture_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_bilan_compta_tree">
            <field name="name">Syndic bilan ligne Tree</field>
            <field name="model">syndic.bilan.ligne</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="debit" sum="Sommes des debit"/>
                    <field name="credit" sum="Sommes des credit"/>
                    <field name="total"/>
                    <field name="account_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_compte_resultat_compta_tree">
            <field name="name">Syndic compte resultatTree</field>
            <field name="model">syndic.bilan.ligne</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="debit" sum="Sommes des debit" string="Charge"/>
                    <field name="credit" sum="Sommes des credit" string="Produit"/>
                    <field name="account_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_bilan_compta_search">
            <field name="name">Syndic bilan ligne Search</field>
            <field name="model">syndic.bilan.ligne</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="account_id"/>
                    <field name="exercice_id"/>
                    <filter string="Facture" domain="[]" name="group_facture" context="{'group_by':'facture_id'}"/>
                    <filter string="Compte" domain="[]" name="group_account" context="{'group_by':'account_id'}"/>
                    <filter string="Exercice" domain="[]" name="group_exercice" context="{'group_by':'exercice_id'}"/>
                    <!--<filter string="Compte Resultat"-->
                            <!--domain="['|', ('account_id.code', '=ilike', '6%'), ('account_id.code', '=ilike', '7%')]"-->
                            <!--name="compte_resultat"/>-->
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_open_exerice_wizard">
            <field name="name">Syndic open exercice wizard</field>
            <field name="model">syndic.open.exercice.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="exercice_id"/>
                        <field name="immeuble_id" invisible="1"/>
                        <field name="roulement_product_id" domain="[('account_product', '=', True)]"/>
                        <field name="roulement"/>
                        <field name="reserve_product_id" domain="[('account_product', '=', True)]"/>
                        <field name="reserve"/>
                        <field name="repartition_lot_id"/>
                    </group>
                    <footer>
                        <button string="Ouverture" name="open_exercice" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_close_exerice_wizard">
            <field name="name">Syndic close exercice wizard</field>
            <field name="model">syndic.close.exercice.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="exercice_id"/>
                        <field name="compte_rapporter"/>
                        <field name="immeuble_id" invisible="1"/>
                        <group>
                            <field name="roulement_valeur_rapporter"/>
                            <field name="roulement_compte_rapporter"/>
                        </group>
                        <group>
                            <field name="reserve_valeur_rapporter"/>
                            <field name="reserve_compte_rapporter"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Cloture" name="close_exercice" type="object"/>
                        <button string="Cloture et reouvrir" name="close_exercice_reopen" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_pcmn_tree">
            <field name="name">Syndic pcmn tree</field>
            <field name="model">syndic.pcmn</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_product_form">
            <field name="name">Syndic product form</field>
            <field name="model">syndic.product</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="receive_compte_id"/>
                        <field name="payable_compte_id"/>
                        <field name="account_product"/>
                        <field name="etablissement_fond" attrs="{'invisible': [('account_product', '=', False)]}"/>
                        <field name="accompte_fond_id" attrs="{'invisible': [('account_product', '=', False)]}"/>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="detail"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_facture">
            <field name="name">Syndic Facture</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facture</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Comptabilité" id="compta"/>
        <menuitem name="Factures" id="facture" parent="compta"/>
        <menuitem name="Factures" id="facture_encode" parent="facture" action="action_facture"/>


        <record model="ir.actions.act_window" id="action_detail_facture">
            <field name="name">Syndic details factures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facture.detail</field>
            <field name="view_mode">tree,form,graph</field>
        </record>

        <menuitem name="Details de factures" id="detail_facture"
                  parent="facture" action="action_detail_facture"/>


        <record model="ir.actions.act_window" id="action_repartition">
            <field name="name">Syndic repartition quotite</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.repartition.lot</field>
            <field name="view_mode">tree,form</field>
        </record>



        <record model="ir.actions.act_window" id="action_syndic_exercice_compta">
            <field name="name">Syndic exercice comptable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.exercice</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_syndic_exercice_ligne_compta">
            <field name="name">Syndic ligne bilan comptable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.bilan.ligne</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_syndic_plan_compte_compta">
            <field name="name">Syndic plan comptable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.pcmn</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Exercice comptable" id="syndic_exercice_compta" parent="compta"/>
        <menuitem name="Exercice comptable" id="syndic_exercice_compta_detail"
                  parent="syndic_exercice_compta" action="action_syndic_exercice_compta"/>
        <menuitem name="Ligne Exercice comptable" id="syndic_exercice_compta_ligne_detail"
                  parent="syndic_exercice_compta" action="action_syndic_exercice_ligne_compta"/>

        <menuitem name="Configurations" id="syndic_configuration_compta" parent="compta"/>
        <menuitem name="Plan de compte" id="syndic_plan_compte_compta_detail"
                  parent="syndic_configuration_compta" action="action_syndic_plan_compte_compta"/>

        <menuitem name="Repartitions des quotités" id="repartition_quotite"
                  parent="syndic_configuration_compta" action="action_repartition"/>

        <record model="ir.actions.act_window" id="action_product">
            <field name="name">Syndic Produit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.product</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('account_product', '=', False)]</field>
        </record>

        <record model="ir.actions.act_window" id="action_product_financier">
            <field name="name">Syndic Produit Financier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.product</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('account_product', '=', True)]</field>
        </record>

        <menuitem name="Produit" id="syndic_product"
                  parent="syndic_configuration_compta" action="action_product" />

        <menuitem name="Produit Financier" id="syndic_product_financier"
                  parent="syndic_configuration_compta" action="action_product_financier" />

        <record model="ir.actions.act_window" id="action_amortissement">
            <field name="name">Syndic Amortissement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.compta.amortissement</field>
            <field name="view_mode">tree,form</field>
        </record>
         <menuitem name="Amortissement" id="syndic_amortissement"
                  parent="syndic_configuration_compta" action="action_amortissement" />
    </data>
</openerp>
