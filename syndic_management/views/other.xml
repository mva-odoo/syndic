<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!--form -->
		<record model="ir.ui.view" id="tree_other">
			<field name="name">divers form view</field>
			<field name="model">syndic.personne</field>
			<field name="arch" type="xml">
				<tree string="Divers"> 
					<field name="name" string="Nom"/>
					<field name="street" string="Adresse"/>
					<field name="city_id" string="Ville"/>
					<field name="zip" string="Code Postal"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email"/>
                </tree>
			</field>
		</record>

		<!--form -->
		<record model="ir.ui.view" id="form_other">
			<field name="name">divers form view</field>
			<field name="model">syndic.personne</field>
			<field name="arch" type="xml">
				<form string="Divers">
					<group colspan="4" col="4">
						<field name="name" colspan="2"/>
						<field name="title" colspan="2" string="Titre"/>
					</group>
					<notebook colspan="4">
						<page string="Contact">
							<group>
								<group>
									<h3 style="color:#3F82B9" colspan="4">
										Adresse:
									</h3>
									<group col="4" colspan="4">
										<field name="street" colspan="4" string="Rue"/>
										<field name="zip"  colspan="2" string="Code Postal"/>
										<field name="city_id"  colspan="2"/>
										<field name="country_id" colspan="4" string="Pays"/>
									</group>
								</group>

								<group>
									<h3 style="color:#3F82B9" colspan="4">
										Contact Electronique:
									</h3>
									<group colspan="4">
										<field name="phone" string="Téléphone"/>
										<field name="fax"/>
										<field name="gsm"/>
										<field name="email"/>
									</group>
								</group>
							</group>
						</page>
					</notebook>
                </form>
			</field>
		</record>
           
		<!--action -->
		<record model="ir.actions.act_window" id="action_other_syndic">
			<field name="name">Divers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">syndic.personne</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
		
    </data>
</openerp>
