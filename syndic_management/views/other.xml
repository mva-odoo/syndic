<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<!--form -->
		<record model="ir.ui.view" id="tree_other">
			<field name="name">divers form view</field>
			<field name="model">syndic.personne</field>
			<field name="arch" type="xml">
				<tree string="Divers"> 
					<field name="name" string="Nom"/>
					<field name="street" string="Adresse"/>
					<field name="city_id" string="Ville"/>
					<field name="zip" string="Code Postal"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email"/>
                </tree>
			</field>
		</record>

		<!--form -->
		<record model="ir.ui.view" id="form_other">
			<field name="name">divers form view</field>
			<field name="model">syndic.personne</field>
			<field name="arch" type="xml">
				<form string="Divers">
					<group colspan="4" col="4">
						<field name="name" colspan="2"/>
						<field name="title" colspan="2" string="Titre"/>
					</group>
					<notebook colspan="4">
						<page string="Contact">
							<group>
								<group string="Adresse">
									<field name="street"/>
									<field name="city_id"/>
									<field name="zip"/>
									<field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
								</group>

								<group string="Contact Electronique">
									<field name="phone" string="Téléphone"/>
									<field name="fax"/>
									<field name="gsm"/>
									<field name="email"/>
								</group>
							</group>
						</page>
					</notebook>
                </form>
			</field>
		</record>
           
		<!--action -->
		<record model="ir.actions.act_window" id="action_other_syndic">
			<field name="name">Divers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">syndic.personne</field>
			
			<field name="view_mode">tree,form</field>
		</record>
		
		
		
    </data>
</odoo>
