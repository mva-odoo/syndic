<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
			<!--search -->
		<record model="ir.ui.view" id="search_supplier">
			<field name="name">supplier search</field>
			<field name="model">syndic.supplier</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Fournisseur">
                    <field name="name" string="Nom du fournisseur"/>
                    <field name="job_ids" />
					<field name="street" string="Adresse"/>
					<field name="city_id"/>
					<field name="zip" string="Code postal"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email"/>
				</search>
			</field>
		</record>
        
		<!--tree view -->
		<record model="ir.ui.view" id="tree_supplier">
			<field name="name">supplier tree view</field>
			<field name="model">syndic.supplier</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Fournisseur">
					<field name="name" string="Nom du fournisseur"/>
					<field name="job_ids" colspan="2" widget="many2many_tags"/>
					<field name="street" string="Adresse"/>
					<field name="city_id"/>
					<field name="zip" string="Code postal"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email"/>
				</tree>
			</field>
		</record>
		
		
		<!--form -->
		<record model="ir.ui.view" id="form_supplier">
			<field name="name">supplier form view</field>
			<field name="model">syndic.supplier</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Fournisseur">
					<h1>
						<field name="name" default_focus="1" placeholder="Nom du fournisseur"/>
					</h1>
					<group colspan="4" col="4">
						<field name="title" colspan="2" string="Titre"/>
						<field name="job_ids" colspan="2" widget="many2many_tags"/>
					</group>
					<notebook colspan="4">
						<page string="Contact" name="contact">
							<group>
								<group>
									<h3 style="color:#3F82B9" colspan="4">
										Adresse:
									</h3>
									<group col="4" colspan="4">
										<field name="country_id" colspan="4" string="Pays"/>
										<field name="city_id"  colspan="2"/>
										<field name="zip"  colspan="2" string="Code Postal"/>
										<field name="street" colspan="4" string="Rue"/>
									</group>
								</group>

								<group>
									<h3 style="color:#3F82B9" colspan="4">
										Contact Electronique:
									</h3>
									<group>
										<field name="phone" string="Téléphone"/>
										<field name="fax"/>
										<field name="gsm"/>
										<field name="email"/>
									</group>
								</group>
							</group>
							<group string="Autres contacts">
								<field name="address_ids" colspan="4" nolabel="1">
									<tree string="Autres contacts" editable="top">
										<field name="name"/>
										<field name="title"/>
										<field name="street"/>
										<field name="city_id"/>
										<field name="zip"/>
										<field name="country_id" string="Pays"/>
										<field name="phone" string="Téléphone"/>
										<field name="fax" string="Fax"/>
										<field name="mobile" string="GSM"/>
										<field name="email"/>
										<field name="is_letter"/>
									</tree>
								</field>
							</group>
						</page>
					</notebook>
                </form>
			</field>
		</record>
               
              
               
		<!--action -->
		<record model="ir.actions.act_window" id="action_supplier_syndic">
			<field name="name">Fournisseurs</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">syndic.supplier</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_supplier" />
			<field name="search_view_id" ref="search_supplier" />
		</record>

		
		
		
    </data>
</openerp>
