<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
			<!--search -->
		<record model="ir.ui.view" id="search_owner">
			<field name="name">owner search</field>
			<field name="model">syndic.owner</field>
			<field name="arch" type="xml">
				<search string="Propriétaires">
                    <field name="name" string="Nom"/>
					<field name="street" string="Adresse"/>
					<field name="city_id" string="Ville"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email" string="Email"/>
					<field name="building_ids"/>
					<field name="lot_ids"/>
				</search>
			</field>
		</record>
        
		<!--tree view -->
		<record model="ir.ui.view" id="tree_owner">
			<field name="name">owner tree view</field>
			<field name="model">syndic.owner</field>
			<field name="arch" type="xml">
				<tree string="Propriétaires">
					<field name="name" string="Nom"/>
					<field name="street" string="Adresse"/>
					<field name="city_id" string="Ville"/>
					<field name="zip" string="Code Postal"/>
					<field name="country_id" string="Pays"/>
					<field name="phone" string="Téléphone"/>
					<field name="email"/>
					<field name="building_store_ids"/>
					<field name="convocation"/>
				</tree>
			</field>
		</record>
		
		
		<!--form -->
		<record model="ir.ui.view" id="form_owner">
			<field name="name">owner form view</field>
			<field name="model">syndic.owner</field>
			<field name="arch" type="xml">
				<form string="Propriétaires" layout="manual" version="7.0"> 
				<group colspan="4" col="4">
					<separator string="Informations sur le propriétaire" colspan="4"/>
					<field name="name" colspan="2" string="Nom"/>
					<field name="prenom" colspan="2"/>
					<field name="title" colspan="2" string="Titre"/>
					<field name="convocation" colspan="2"/>
				</group>
				<notebook colspan="4">
                    <page string="Contact">
						<group colspan="4" col="4">
							<separator string="Contact principal" colspan="4"/>
							<field name="street" colspan="2" string="Adresse"/>
							<field name="zip" colspan="2" string="Code Postal"/>
							<field name="city_id" colspan="2"/>
							<field name="country_id" string="Pays" colspan="2"/>
							<field name="phone" string="Téléphone" />
							<field name="fax"/>
							<field name="gsm"/>
							<field name="email"/>
							<separator string="Autres contacts" colspan="4"/>
							<field name="address_ids" colspan="4" nolabel="1">
								<tree string="Autres contacts" editable="top">
									<field name="name"/>
                                    <field name="title"/>
									<field name="street"/>
									<field name="zip"/>
									<field name="city_id"/>
									<field name="country_id" string="Pays"/>
									<field name="phone" string="Téléphone"/>
									<field name="fax" string="Fax"/>
									<field name="mobile" string="GSM"/>
									<field name="email"/>
									<field name="is_letter"/>
								</tree>
							</field>
						</group>
                    </page>
                    <page string="Lots">
						<group colspan="4" col="4">
							<field name="lot_ids" colspan="4" nolabel="1">
								<tree string="Lots">
									<field name="name"/>
									<field name="locataire_id" widget="many2many_tags"/>
									<field name="building_id"/>
								</tree>
							</field>
						</group>
                    </page>
                    <page string="Connexion web">
						<group colspan="4" col="4">
							<field name="login" colspan="4"/>
							<field name="password" colspan="4"/>
							<field name="user_id" colspan="4"/>
						</group>
                    </page>
                </notebook>
                </form>
			</field>
		</record>
               
              
               
		<!--action -->
		<record model="ir.actions.act_window" id="action_owner_syndic">
			<field name="name">Propriétaires</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">syndic.owner</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_owner" />
			<field name="search_view_id" ref="search_owner" />
		</record>

		
		
		
    </data>
</openerp>
