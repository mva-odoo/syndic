<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="syndic_compta_payment_tree">
        <field name="name">Syndic comptabilité payement Tree</field>
        <field name="model">syndic.compta.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="due_amount"/>
                <field name="paid_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="syndic_compta_payment_form">
        <field name="name">Syndic comptabilité payement Form</field>
        <field name="model">syndic.compta.payment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="due_amount"/>
                    <field name="paid_amount"/>
                    <field name="communication"/>
                    <field name="payment_ligne_ids"/>
                </group>
            </form>
        </field>
    </record>
</odoo>