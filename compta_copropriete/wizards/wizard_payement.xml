<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="syndic_compta_wizard_payment">
        <field name="name">Syndic wizard payment</field>
        <field name="model">syndic.compta.wizard.payment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type_payement"/>
                    <field name="bank_account_id" attrs="{'invisible':[('type_payement', '!=', 'compte')]}"/>
                    <field name="amortissement_year" attrs="{'invisible':[('type_payement', '!=', 'amortissement')]}"/>
                </group>
                <footer>
                    <button name="payment" string="payement" type="object"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>