<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <record model="ir.ui.view" id="syndic_facturation_syndic_search">
            <field name="name">Syndic facturation syndic search</field>
            <field name="model">syndic.facturation.syndic</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="immeuble_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_syndic_tree">
            <field name="name">Syndic facturation syndic tree</field>
            <field name="model">syndic.facturation.syndic</field>
            <field name="arch" type="xml">
                <tree string="Facture">
                    <field name="num_facture"/>
                    <field name="immeuble_id"/>
                    <field name="date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="syndic_facturation_syndic_form">
            <field name="name">Syndic facturation syndic form</field>
            <field name="model">syndic.facturation.syndic</field>
            <field name="arch" type="xml">
                <form string="Facture">
                    <group>
                        <group>
                            <field name="year_id" attrs="{'readonly':[('num_facture', '!=', False)]}"/>
                            <field name="immeuble_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="num_facture"/>
                            <field name="num_immeuble"/>
                        </group>
                    </group>

                    <field name="sgimmo_lign_ids">
                        <tree editable="top">
                            <field name="description"/>
                            <field name="qty"/>
                            <field name="prix"/>
                            <field name="prix_tot"/>
                        </tree>
                    </field>
                    <group>
                        <field name="facture_tot"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_syndic_facturation_syndic">
            <field name="name">facturate SGImmo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syndic.facturation.syndic</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Factures SGImmo"
                  id="menusgimmo_facture"
                  parent="syndic_facturation.syndic_facture_main"
                  action="action_syndic_facturation_syndic"
                  sequence="20"/>

    </data>
</openerp>