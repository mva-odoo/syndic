<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="sgimmo_facturation.facture">
            <t t-call="report.external_layout">
                <t t-set="docs" t-value="docs.with_context({'lang':'fr_BE'})" />
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <span t-field="res_company.name"/><br/>
                                        <span t-field="res_company.street"/><br/>
                                        <span t-field="res_company.zip"/> <span t-field="res_company.city"/><br/>
                                        Tél: <span t-field="res_company.phone"/><br/>
                                        Fax: <span t-field="res_company.fax"/><br/>
                                    </div>
                                    <div class="col-xs-6" style="font-size:16px;">
                                        <div>
                                            <table class="table table-bordered">
                                                <tr style="border:1px;">
                                                    <th colspan="3" style="text-align:center;">Facture</th>
                                                </tr>
                                                <tr>
                                                    <td>N°facture</td>
                                                    <td>Date</td>
                                                    <td>Code client</td>
                                                </tr>
                                                <tr>
                                                    <td>Facture</td>
                                                    <td>Facture</td>
                                                    <td>Facture</td>
                                                </tr>
                                            </table>
                                        </div>

                                        <br/><b><span t-field="o.immeuble_id.name"/></b><br/>
                                        <span t-field="o.immeuble_id.address_building"/><br/>
                                        <span t-esc="o.immeuble_id.zip_building"/> <span t-field="o.immeuble_id.city_building.name"/><br/>
                                        <br/>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                        <div class="col-xs-6" style="font-size:16px;">
                                            mode de paiement: Virement<br/>
                                            Date d'échéance: <br/>
                                        </div>
                                        <div class="col-xs-6">

                                        </div>

                                     <div class="col-xs-12">
                                         <table class="table table-condensed" style="font-size:16px;">
                                              <thead>
                                                <tr style ="text-align:center">
                                                    <th>Référence</th>
                                                    <th>Description</th>
                                                    <th>Quantité</th>
                                                    <th>Prix unitaire</th>
                                                    <th>Remise HT</th>
                                                    <th>Total HT</th>
                                                    <th>Tx TVA</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sale_tbody">
                                            <t t-foreach="o.line_ids" t-as="line">
                                                <tr>
                                                    <td>AR0001</td>
                                                    <td>HONORAIRE</td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </t>
                                             </tbody>
                                         </table>

                                         <br/>
                                         <table class="table table-bordered" style="font-size:16px;">
                                            <thead>
                                                <tr style ="text-align:center">
                                                    <th>% TVA</th>
                                                    <th>Base</th>
                                                    <th>Montant</th>
                                                    <th>Total HT</th>
                                                    <th>Total TVA</th>
                                                    <th>Total TTC</th>
                                                    <th>Déjà réglé TTC</th>
                                                </tr>
                                            </thead>
                                             <tbody>
                                                 <tr>
                                                     <td>Exoneré</td>
                                                     <td><span t-field="o.total"/></td>
                                                     <td></td>
                                                     <td><span t-field="o.total"/></td>
                                                     <td></td>
                                                     <td><span t-field="o.total"/></td>
                                                     <td></td>
                                                 </tr>
                                                 <tr>
                                                     <td colspan="7" style="text-align:right">
                                                         <b>Net à payer</b>
                                                     </td>
                                                 </tr>
                                                 <tr>
                                                     <td colspan="7" style="text-align:right">
                                                         <span t-field="o.total"/>
                                                     </td>
                                                 </tr>
                                             </tbody>
                                         </table>
                                         <br/>
                                         <br/>
                                         <b style="font-size:16px;">
                                            Excempt de TVA suivant circulaire n°13/95 du 20.09.95 du ministere des Finances.<br/>
                                            A verser au compte 001 5423024-24
                                         </b>
                                    </div>
                                 </div>
                            </div>
                        </div>
                </t>
            </t>
        </template>
        <report
                id="sgimmo_facture_print"
                model="syndic.facturation.syndic"
                string="Facture SGimmo"
                name="sgimmo_facturation.facture"
                file="name"
                report_type="qweb-pdf"
                />
    </data>
</openerp>