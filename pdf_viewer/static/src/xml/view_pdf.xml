<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="PDFViewer">
        <div id='pdf_tools' class='pdf_tools' style="height:20px;width:100%;text-align:right;left:-60px;position:absolute;top:60px;">
            <a href="javascript: history.go(-1)" style="color:white;background:rgb(82, 86, 89)">Retour</a>
        </div>

        <div style="height:99%;width:100%;">
            <t t-if="widget.url">
                <iframe width="100%" height="100%" t-attf-src="{{ widget.url }}"></iframe>
            </t>
        </div>
    </t>
</templates>