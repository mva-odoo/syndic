<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <report
                id="letter_print"
                model="letter.letter"
                string="lettre"
                name="syndic_letter.letter_qweb"
                file="name"
                report_type="qweb-pdf"
                />

        <template t-name="report.external_layout_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 165px;"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="report.external_layout_footer">
          <div class="footer">
                <hr style="color: #000;background-color: #000;height: 1px;margin-bottom:5px;margin-top: 40px; padding-bottom: 0px;"/>
                <table class="footer" style="border-top: 1px solid black; width: 100%;border:0;">
                    <tr > <td style="text-align:center;color:#01559D;font-size:14px;">Tél : 02 / 242.89.86  &amp;nbsp;&amp;nbsp;-&amp;nbsp;&amp;nbsp;  Fax : 02 / 241.32.55  &amp;nbsp;&amp;nbsp;-&amp;nbsp;&amp;nbsp;  Numéro d'entreprise : 0894 523 013 &amp;nbsp;&amp;nbsp;-&amp;nbsp;&amp;nbsp; Email : info@sgimmo.be</td></tr>
                    <tr > <td style="text-align:center;color:#01559D;font-size:14px;">I.P.I n° 501528  &amp;nbsp;&amp;nbsp;-&amp;nbsp;&amp;nbsp;  Assurance professionnelle : AXA 730290350  &amp;nbsp;&amp;nbsp;-&amp;nbsp;&amp;nbsp;  Compte bancaire : 001 - 5423024 - 24</td></tr>
                </table>
            </div>
        </template>

        <template t-name="letter">
            <div class="page">
                <div class="row">
                 
                    <div class="col-xs-6"><br/><br/>
                        <t t-if="o.is_fax">
                            FAX: <span t-field="prop_id.fax" style="font-size:16px;"/>
                        </t>
                        <br/><span t-field="o.letter_type_id.name" style="font-size:18px;"/>
                        <br/>
                    </div>
                    <div class="col-xs-6" style="font-size:16px;">
                        <span t-field="prop_id.title.name"/> <span t-field="prop_id.name"/><br/>
                        <span t-field="prop_id.street"/><br/>
                        <span t-field="prop_id.zip"/> <span t-field="prop_id.city_id.name"/><br/>
                        <span t-field="prop_id.country_id.name"/><br/>
                        <br/>
                        Bruxelles, le <span t-field="o.date_fr"/><br/>
                    </div>
                

                    <div class="col-xs-2" style="font-size:16px;">
                        <br/>Concerne:<br/><br/><br/>
                        BCE:<br/><br/>
                        Objet:
                    </div>
                    <div class="col-xs-10" style="font-size:16px;">
                        <br/><span t-field="o.immeuble_id.name"/><br/>
                        <span t-field="o.immeuble_id.address_building"/><br/>
                        <span t-field="o.immeuble_id.zip_building"/> <span t-field="o.immeuble_id.city_building.name"/><br/>
                        <span t-field="o.immeuble_id.BCE"/><br/><br/>
                        <span t-field="o.sujet"/><br/>
                    </div>

                
                    <div class="col-xs-12" style="font-size:16px;">
                        <br/><br/>
                        <span t-field="o.begin_letter_id.name"/>
                        <br/>
                        <br/>
                        <span t-field="o.contenu"/>
                        <br/>
                        <span t-field="o.end_letter_id.name"/>
                        <br/>
                        <br/>
                        Le Syndic
                        <t t-if="o.ps">
                            <br/>
                            <br/>
                            <p><span t-field="o.ps"/></p>
                        </t>
           
                    
                    </div>
                </div>
            </div>
        </template>



        <template id="letter_qweb">
            <t t-call="report.html_container">
                <t t-name="letter_qweb">
                    <t t-foreach="docs" t-as="o">
                        <t t-foreach="o.propr_ids" t-as="prop_id">
                            <t t-call="report.external_layout">
                                <t t-call="syndic_letter.letter"/>
                            </t>
                        </t>
                        <t t-foreach="o.loc_ids" t-as="prop_id">
                           <t t-call="report.external_layout">
                                <t t-call="syndic_letter.letter"/>
                            </t>
                        </t>

                        <t t-foreach="o.fourn_ids" t-as="prop_id">
                           <t t-call="report.external_layout">
                                <t t-call="syndic_letter.letter"/>
                            </t>
                        </t>

                        <t t-foreach="o.divers_ids" t-as="prop_id">
                            <t t-call="report.external_layout">
                                <t t-call="syndic_letter.letter"/>
                            </t>
                        </t>

                        <t t-foreach="o.partner_address_ids" t-as="prop_id">
                            <t t-call="report.external_layout">
                                <t t-call="syndic_letter.letter"/>
                            </t>
                        </t>
                    </t>
                </t>
            </t>
        </template>





    </data>
</openerp>
