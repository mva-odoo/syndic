<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <report
            id="barcode_offre_print"
            string="Barcode Offre"
            model="offre.contrat"
            name="syndic_claim.barcode_offre"
            report_type="qweb-pdf"
        />

        <template id="barcode_offre">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="barcode" style="max-height:50pt;max-width:100%;text-align: center;">
                            <img 
                                alt="barcode"
                                t-if="o.code"
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.code, 600, 120)"
                                style="max-height:50pt;max-width:100%;"
                                align="center"
                            />
                        </div>
                        <div t-field="o.code" style="max-height:50pt;max-width:100%;text-align: center;"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>