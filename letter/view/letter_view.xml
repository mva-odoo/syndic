<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--search -->
        <record model="ir.ui.view" id="search_letter">
            <field name="name">Letter search</field>
            <field name="model">letter.create</field>
            <field name="arch" type="xml">
                <search string="letter">
                    <field name="sujet"/>
                    <field name="create_date"/>
                    <field name="immeuble_id"/>
                    <field name="propr_ids" />
                    <field name="fourn_ids" />
                    <field name="loc_ids" />
                    <field name="divers_ids" />
                    <field name="contenu" />
                    <field name="letter_type_id" />
                    <group expand="0" string="Group By...">
                        <filter string="Type de lettre" domain="[]" name="group_type" context="{'group_by':'letter_type_id'}"/>
                        <filter string="Immeuble" domain="[]" name="group_immeuble" context="{'group_by':'immeuble_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="attachement_form">
            <field name="name">ir.attachment</field>
            <field name="model">ir.attachment</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="datas"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="search_model">
            <field name="name">Model search</field>
            <field name="model">letter.model</field>
            <field name="arch" type="xml">
                <search string="Model">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!--tree view -->
        <record model="ir.ui.view" id="tree_model">
            <field name="name">Letter tree view</field>
            <field name="model">letter.model</field>
            <field name="arch" type="xml">
                <tree string="Modele de lettre">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!--form -->
        <record model="ir.ui.view" id="form_new_letter">
            <field name="name">Letter form view</field>
            <field name="model">letter.create</field>
            <field name="arch" type="xml">
                <form string="Letter" version="7.0">
                        <header>
                            <button string="Envoyer emails" name="send_email_lettre" type="object"/>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group colspan="4" col="4">
                            <field name="sujet"/>
                            <field name="letter_type_id"  colspan="2"/>
                            <field name="letter_model_id" colspan="2"/>
                            <field name="immeuble_id" />
                            <field name="date" />
                            <field name="all_immeuble"/>
                            <field name="is_mail"/>
                            <field name="is_fax"/>
                            <field name="date_fr"/>
                            <field name="piece_jointe_ids" attrs="{'invisible':[('is_mail','=',False)]}">
                                <tree editable="top">
                                    <field name="attachement_id"/>
                                </tree>
                            </field>
                            <notebook colspan="4">
                                <page string="propriétaires">
                                    <field name="propr_ids">
                                        <tree string="Fournisseur">
                                            <field name="name" string="Nom"/>
                                            <field name="street" string="Adresse"/>
                                            <field name="city_id" string="Ville"/>
                                            <field name="country_id" string="Pays"/>
                                            <field name="email"/>
                                            <field name="building_store_ids"/>
                                            <field name="convocation"/>
                                        </tree>
                                    </field>

                                </page>
                                <page string="fournisseurs">
                                    <field name="fourn_ids" />
                                </page>
                                <page string="locataires">
                                    <field name="loc_ids"/>
                                </page>
                                <page string="Divers">
                                    <field name="divers_ids" colspan="1"/>
                                </page>
                                <page string="Personnes jointes">
                                    <field name="partner_address_ids" colspan="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="add_parent_id_owner"/>
                                            <field name="add_parent_id_supplier"/>
                                            <field name="add_parent_id_loaner"/>
                                        </tree>
                                    </field>
                                </page>

                            </notebook>

                                <field name="begin_letter_id" colspan="4"/>
                                <field name="save_letter"/>
                                <field name="name_template" attrs="{'required':[('save_letter','=',True)],'invisible':[('save_letter','=',False)]}"/>
                                <field name="contenu" nolabel="1" colspan="4" widget="html"/>
                                <field name="end_letter_id" colspan="4"/>
                                <field name="ps" colspan="4"/>
                        </group>

                </form>
            </field>

        </record>
        <record model="ir.ui.view" id="tree_new_letter">
            <field name="name">Letter tree view</field>
            <field name="model">letter.create</field>
            <field name="arch" type="xml">
                <tree string="Letter" version="7.0">
                    <field name="create_date"/>
                    <field name="sujet"/>
                    <field name="letter_type_id"  colspan="2"/>
                    <field name="letter_model_id" colspan="2"/>
                    <field name="immeuble_id" />
                    <field name="date" string="Date de l'envoi"/>
                    <field name="all_immeuble" />
                    <field name="is_mail"/>
                </tree>
            </field>

        </record>


        <record model="ir.ui.view" id="form_model">
            <field name="name">Letter form view</field>
            <field name="model">letter.model</field>
            <field name="arch" type="xml">
                <form string="model" version="7.0">
                    <sheet string="Letter" layout="auto">
                <notebook colspan="4">
                    <page string="Models">
                        <field name="name" colspan="4"/>
                        <field name="text" colspan="4"/>
                    </page>
                </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tree_avis">
            <field name="name">Avis tree view</field>
            <field name="model">letter.avis</field>
            <field name="arch" type="xml">
                <tree string="Avis" version="7.0">
                        <field name="name" />
                        <field name="type_id" />
                        <field name="immeuble_id" />
                        <field name="create_date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="search_avis">
            <field name="name">Avis search view</field>
            <field name="model">letter.avis</field>
            <field name="arch" type="xml">
                <search string="Avis">
                        <field name="name" />
                        <field name="type_id" />
                        <field name="immeuble_id" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="form_avis">
            <field name="name">Avis form view</field>
            <field name="model">letter.avis</field>
            <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Avis" version="7.0">
                        <sheet string="Letter" layout="auto">
                            <group>
                                <field name="name" />
                                <field name="date" />
                                <field name="date_fr" />
                                <field name="avis_model_id"/>
                                <field name="type_id"/>
                                <field name="immeuble_id"/>
                                <field name="text"/>
                            </group>
                        </sheet>
                    </form>
            </field>
        </record>

        <record model="ir.ui.view" id="form_avis_model">
            <field name="name">Model Avis form view</field>
            <field name="model">letter.avis.model</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Avis" version="7.0">
                    <sheet string="Letter" layout="auto">
                        <group>
                            <field name="name"/>
                            <field name="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--action -->

        <record model="ir.actions.act_window" id="action_model">
            <field name="name">Modèle de lettre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="tree_model" />
            <field name="search_view_id" ref="search_model" />
        </record>

        <record model="ir.actions.act_window" id="action_model_avis">
            <field name="name">Modèle d avis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.avis.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_new_letter">
            <field name="name">lettres</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <record model="ir.actions.act_window" id="action_avis">
            <field name="name">Avis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.avis</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="begin_letter">
            <field name="name">Debut de lettre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.begin</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="end_letter">
            <field name="name">Fin de lettre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.end</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="type_letter">
            <field name="name">Type de lettre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="mail_letter">
            <field name="name">mail letter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mail.mail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--menu -->
        <menuitem name="Lettre" id="menu_letter" />
        <menuitem name="Lettre" id="menu_sub_letter" parent="menu_letter" sequence="1"/>
        <menuitem name="Lettre" id="menu_action_new_letter" parent="menu_sub_letter" action="action_new_letter" sequence="2"/>
        <menuitem name="Avis" id="menu_action_avis" parent="menu_sub_letter" action="action_avis" sequence="3"/>
        <menuitem name="Configuration" id="menu_configuration_letter" parent="menu_letter" sequence="2" groups="syndic_management.syndic_manager"/>
        <menuitem name="Modèle de lettre" id="menu_action_model" parent="menu_configuration_letter" action="action_model" sequence="1"/>
        <menuitem name="Modèle d avis" id="menu_action_model_avis" parent="menu_configuration_letter" action="action_model_avis" sequence="2"/>
        <menuitem name="Type de lettre" id="menu_type_letter" parent="menu_configuration_letter" action="type_letter" sequence="3"/>
        <menuitem name="Debut de lettre" id="menu_begin_letter" parent="menu_configuration_letter" action="begin_letter" sequence="4"/>
        <menuitem name="Fin de lettre" id="menu_end_letter" parent="menu_configuration_letter" action="end_letter" sequence="5"/>
        <menuitem name="Courriel" id="email_letter" parent="menu_configuration_letter" action="mail_letter" sequence="6"/>
    </data>
</openerp>
